<%- include('partials/header') %>

    <main>
        <div class="overlay">
            <form method="POST" action="/generate">
                <input type="number" name="number" id="numberInput" placeholder="Enter a number" required />
                <div class="button-group">
                    <button type="submit" id="generateBtn" disabled> Generate Table</button>
                    <a href="/" class="reset-button">ðŸ”„ Reset</a>
                </div>
            </form>

            <% if (table) { %>
                <ul>
                    <% table.forEach(row=> { %>
                        <li>
                            <%= row %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
        </div>
    </main>

    <%- include('partials/footer') %>
        <script>
            const numberInput = document.getElementById("numberInput");
            const generateBtn = document.getElementById("generateBtn");

            numberInput.addEventListener("input", function () {
                generateBtn.disabled = !numberInput.value.trim();
            });
        </script>